<% content_for :title, "Reports" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Reports</h1>
  </div>

  <% if @reports.any? %>
    <div class="space-y-4">
      <% @reports.each do |report| %>
        <div class="card bg-base-100 shadow-sm hover:shadow-md transition-shadow">
          <div class="card-body p-4">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <div class="avatar avatar-placeholder">
                    <div class="bg-neutral text-neutral-content rounded-full size-8">
                      <span class="text-xs"><%= report.user.username[0..1].upcase %></span>
                    </div>
                  </div>
                  <div>
                    <p class="font-semibold"><%= report.user.preferred_name || report.user.username %></p>
                    <p class="text-xs text-base-content/70">
                      <%= report.reportable&.reportable&.class&.name %>: <%= report.reportable&.reportable&.name %>
                    </p>
                  </div>
                </div>
                
                <div class="text-sm text-base-content/80 mb-2">
                  <% if report.as_of_at %>
                    <strong>As of:</strong> <%= report.format_in_timezone(report.as_of_at, :long) %>
                  <% end %>
                  
                  <% if report.submitted? %>
                    <span class="badge badge-success badge-sm ml-2">Submitted</span>
                    <span class="text-xs ml-1">(<%= time_ago_in_words(report.submitted_at) %> ago)</span>
                  <% else %>
                    <span class="badge badge-warning badge-sm ml-2">Draft</span>
                  <% end %>
                </div>

                <div class="text-sm text-base-content/60">
                  Created <%= time_ago_in_words(report.created_at) %> ago
                </div>
              </div>

              <div class="flex gap-2">
                <%= link_to report, class: "btn btn-ghost btn-sm" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>No reports found.</span>
    </div>
  <% end %>
</div>
