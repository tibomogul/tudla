<% content_for :title, "Teams" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Teams</h1>
    <%= link_to "New team", new_team_path, class: "btn btn-soft btn-primary" %>
  </div>

  <div id="teams" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @teams.any? %>
      <% @teams.each do |team| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render team %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", team, class: "btn btn-soft" if policy(team).show? %>
            <%= link_to "Edit", edit_team_path(team), class: "btn btn-soft" if policy(team).edit? %>
            <%= button_to "Destroy", team, method: :delete, class: "btn btn-soft btn-secondary", data: { turbo_confirm: "Are you sure?" } if policy(team).destroy? %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No teams found.</p>
    <% end %>
  </div>
</div>
