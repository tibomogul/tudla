<%= turbo_frame_tag dom_id(project, :risk) do %>
  <div id="<%= dom_id project, :risk %>" class="space-y-6">
    <!-- Risk State Card -->
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body p-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="avatar avatar-placeholder">
              <div class="bg-<%= case project.risk_current_state.to_s
                when 'green' then 'success'
                when 'yellow' then 'warning'
                when 'red' then 'error'
                else 'neutral'
              end %> text-<%= case project.risk_current_state.to_s
                when 'green' then 'success'
                when 'yellow' then 'warning'
                when 'red' then 'error'
                else 'neutral'
              end %>-content rounded-full size-12">
                <span class="text-xl"><%= project.risk_current_state.to_s[0].upcase %></span>
              </div>
            </div>
            <div>
              <h3 class="font-semibold text-lg">Current Risk State</h3>
              <div class="flex items-center gap-2">
                <span class="badge badge-lg <%= case project.risk_current_state.to_s
                  when 'green' then 'badge-success'
                  when 'yellow' then 'badge-warning'
                  when 'red' then 'badge-error'
                  else 'badge-neutral'
                end %>">
                  <%= project.risk_current_state.to_s.humanize %>
                </span>
                <% time_in_current_state = project.time_in_current_risk_state %>
                <% if time_in_current_state %>
                  <span class="text-sm text-base-content/60">
                    for <%= distance_of_time_in_words(time_in_current_state) %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Description Card -->
    <% if project.description.present? %>
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body p-4">
          <h3 class="font-semibold text-base mb-3 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
            </svg>
            Description
          </h3>
          <div data-controller="theme-dark">
            <div class="marksmith-rendered-body ms:prose ms:prose-neutral ms:dark:prose-invert">
              <%= render_markdown(project.description) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Project Details Card -->
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body p-4">
        <h3 class="font-semibold text-base mb-3 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
          </svg>
          Project Details
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% if project.team_id %>
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Team</p>
              <%= link_to project.team.name, project.team, class: "link link-primary", data: { turbo: false } %>
            </div>
          <% end %>

          <% scope_count = project.scopes.count %>
          <% if scope_count > 0 %>
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Scopes</p>
              <p class="text-sm"><%= scope_count %> <%= 'scope'.pluralize(scope_count) %></p>
            </div>
          <% end %>

          <% task_count = project.tasks.count %>
          <% if task_count > 0 %>
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Tasks</p>
              <p class="text-sm"><%= task_count %> <%= 'task'.pluralize(task_count) %></p>
            </div>
          <% end %>

          <% if project.created_at %>
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Created</p>
              <p class="text-sm"><%= time_ago_in_words(project.created_at) %> ago</p>
            </div>
          <% end %>

          <% if project.updated_at && project.updated_at != project.created_at %>
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Last Updated</p>
              <p class="text-sm"><%= time_ago_in_words(project.updated_at) %> ago</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Risk State Transitions Card -->
    <% allowed_states = project.risk_state_machine.allowed_transitions %>
    <% if allowed_states.any? %>
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body p-4">
          <h3 class="font-semibold text-base mb-3 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
            </svg>
            Available Risk State Transitions
          </h3>
          
          <div class="flex flex-wrap gap-2">
            <% allowed_states.each do |state| %>
              <%= button_to update_risk_state_project_path(project, state: state, update_context: "details"),
                method: :patch,
                data: { turbo_stream: true },
                class: "btn btn-sm #{risk_button_color(state)}" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
                Move to <%= state.to_s.humanize %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
