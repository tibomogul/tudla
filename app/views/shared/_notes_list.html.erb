<%
  # This partial expects:
  # - notes: Collection of Note objects
  # - show_header: Boolean (default: true) - whether to show the "Notes" header
  
  show_header = local_assigns.fetch(:show_header, true)
%>

<div id="<%= "#{notes.first&.notable&.notable&.class&.name&.underscore}_#{notes.first&.notable&.notable&.id}_notes" if notes.any? %>">
  <% if show_header %>
    <h2 class="text-2xl font-bold mb-4">Notes</h2>
  <% end %>

  <% if notes.any? %>
    <div class="space-y-4">
      <% notes.each do |note| %>
        <div class="card bg-base-100 border border-base-300 shadow-sm">
          <div class="card-body">
            <!-- Header with title and actions -->
            <div class="flex justify-between items-start mb-2">
              <div class="flex-1">
                <% if note.title.present? %>
                  <h3 class="card-title text-lg"><%= note.title %></h3>
                <% end %>
                <div class="text-sm text-base-content/60 flex items-center gap-2 mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                  </svg>
                  <span><%= note.user.preferred_name %></span>
                  <span>â€¢</span>
                  <span><%= time_ago_in_words(note.created_at) %> ago</span>
                  <% if note.updated_at > note.created_at + 1.minute %>
                    <span class="text-xs">(edited)</span>
                  <% end %>
                </div>
              </div>
              
              <!-- Action buttons -->
              <% if current_user && note.user == current_user %>
                <div class="flex gap-2">
                  <%= link_to edit_note_path(note), 
                    class: "btn btn-ghost btn-sm btn-square",
                    title: "Edit note" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                    </svg>
                  <% end %>
                  <%= button_to note_path(note), 
                    method: :delete,
                    form_class: "inline-block",
                    class: "btn btn-ghost btn-sm btn-square text-error",
                    title: "Delete note",
                    data: { turbo_confirm: "Are you sure you want to delete this note?" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>

            <!-- Note content (rendered markdown) -->
            <%= render_markdown(note.content) %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 text-base-content/60">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto mb-4 opacity-50">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
      </svg>
      <p>No notes yet. Add your first note to get started.</p>
    </div>
  <% end %>
</div>
