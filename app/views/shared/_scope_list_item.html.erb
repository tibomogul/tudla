<li id="<%= dom_id(scope) %>" data-scope-id="<%= scope.id %>" class="flex items-center gap-3 p-3 hover:bg-base-200 rounded-lg transition-colors group">
  <% show_drag_handle = local_assigns.fetch(:show_drag_handle, false) %>
  
  <% if show_drag_handle %>
    <!-- Drag Handle -->
    <div data-handle class="flex-shrink-0 cursor-grab active:cursor-grabbing text-base-content/40 hover:text-base-content transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
      </svg>
    </div>
  <% end %>

  <!-- Progress Pie Chart -->
  <div class="flex-shrink-0">
    <div class="pie-wedge w-12 h-12" style="--thickness:30%; --tibo-p:<%= scope.percent_done %>; --color:#ef4444"></div>
  </div>

  <!-- Scope Info -->
  <div class="flex-1 min-w-0">
    <div class="flex items-center gap-2">
      <%= link_to display_name_with_nice_to_have(scope), scope, class: "font-medium hover:link truncate" %>
      <span class="badge badge-xs badge-neutral">
        <%= scope.percent_done %>% done
      </span>
    </div>
    
    <% if scope.description.present? %>
      <p class="text-xs text-base-content/60 mt-1 line-clamp-1">
        <%= strip_tags(render_markdown(scope.description)).truncate(80) %>
      </p>
    <% end %>
  </div>

  <!-- Task Count -->
  <div class="flex-shrink-0">
    <div class="flex items-center gap-1 text-xs text-base-content/60">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
      </svg>
      <span><%= scope.tasks.count %> <%= 'task'.pluralize(scope.tasks.count) %></span>
    </div>
  </div>

  <!-- View Action -->
  <div class="flex-shrink-0">
    <%= link_to scope, class: "btn btn-ghost btn-sm btn-circle opacity-0 group-hover:opacity-100 transition-opacity", title: "View scope" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
      </svg>
    <% end %>
  </div>
</li>
