<%
  # Optional parameter to hide header (default: true)
  show_header = local_assigns.fetch(:show_header, true)
%>

<div class="<%= 'mt-8' if show_header %>">
  <!-- Header -->
  <% if show_header %>
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold">Attachments</h2>
      <span class="badge badge-neutral"><%= attachments.count %></span>
    </div>
  <% end %>

  <% if attachments.any? %>
    <div class="space-y-2">
      <% attachments.order(created_at: :desc).each do |attachment| %>
        <div class="card bg-base-100 shadow-sm hover:shadow-md transition-shadow">
          <div class="card-body p-4">
            <div class="flex items-start gap-4">
              <!-- File icon -->
              <div class="flex-shrink-0">
                <div class="avatar avatar-placeholder">
                  <div class="bg-primary text-primary-content rounded-lg size-12">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                    </svg>
                  </div>
                </div>
              </div>

              <!-- File details -->
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-2">
                  <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-base truncate">
                      <%= attachment.filename %>
                    </h3>
                    <div class="flex gap-3 text-xs text-base-content/70 mt-1">
                      <span><%= attachment.file_size %></span>
                      <span>•</span>
                      <span>Uploaded by <%= attachment.user.preferred_name || attachment.user.username %></span>
                      <span>•</span>
                      <span><%= time_ago_in_words(attachment.created_at) %> ago</span>
                    </div>
                    <% if attachment.description.present? %>
                      <p class="text-sm text-base-content/80 mt-2"><%= attachment.description %></p>
                    <% end %>
                  </div>

                  <!-- Actions -->
                  <div class="flex gap-1 flex-shrink-0">
                    <%= link_to download_attachment_path(attachment), 
                      class: "btn btn-ghost btn-sm btn-circle",
                      title: "Download" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
                      </svg>
                    <% end %>
                    
                    <% if policy(attachment).destroy? %>
                      <%= button_to attachment_path(attachment), 
                        method: :delete, 
                        form_class: "inline-block",
                        class: "btn btn-ghost btn-sm btn-circle text-error",
                        title: "Delete",
                        data: { turbo_confirm: "Are you sure you want to delete this attachment?" } do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 text-base-content/60">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto mb-4 opacity-50">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
      </svg>
      <p>No attachments yet. Upload files to get started.</p>
    </div>
  <% end %>
</div>
