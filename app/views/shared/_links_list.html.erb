<%
  # This partial expects:
  # - links: Collection of Link objects
  # - show_header: Boolean (default: true) - whether to show the "Links" header
  
  show_header = local_assigns.fetch(:show_header, true)
%>

<div id="<%= "#{links.first&.linkable&.linkable&.class&.name&.underscore}_#{links.first&.linkable&.linkable&.id}_links" if links.any? %>">
  <% if show_header %>
    <h2 class="text-2xl font-bold mb-4">Links</h2>
  <% end %>

  <% if links.any? %>
    <div class="space-y-3">
      <% links.each do |link| %>
        <div class="card bg-base-100 border border-base-300 shadow-sm hover:shadow-md transition-shadow">
          <div class="card-body py-3 px-4">
            <div class="flex items-start justify-between gap-3">
              <!-- Link icon and content -->
              <div class="flex items-start gap-3 flex-1 min-w-0">
                <div class="mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
                  </svg>
                </div>
                
                <div class="flex-1 min-w-0">
                  <!-- URL with external link -->
                  <%= link_to link.url, 
                    target: "_blank", 
                    rel: "noopener noreferrer",
                    class: "link link-primary font-medium break-all" do %>
                    <%= link.url %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline ml-1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                    </svg>
                  <% end %>
                  
                  <!-- Domain -->
                  <div class="text-xs text-base-content/60 mt-1">
                    <%= link.domain %>
                  </div>
                  
                  <!-- Description if present -->
                  <% if link.description.present? %>
                    <p class="text-sm text-base-content/80 mt-2"><%= link.description %></p>
                  <% end %>
                  
                  <!-- Meta info -->
                  <div class="text-xs text-base-content/60 mt-2 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                    </svg>
                    <span><%= link.user.preferred_name %></span>
                    <span>â€¢</span>
                    <span><%= time_ago_in_words(link.created_at) %> ago</span>
                    <% if link.updated_at > link.created_at + 1.minute %>
                      <span class="text-xs">(edited)</span>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- Action buttons -->
              <% if current_user && link.user == current_user %>
                <div class="flex gap-1">
                  <%= link_to edit_link_path(link), 
                    class: "btn btn-ghost btn-sm btn-square",
                    title: "Edit link" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                    </svg>
                  <% end %>
                  <%= button_to link_path(link), 
                    method: :delete,
                    form_class: "inline-block",
                    class: "btn btn-ghost btn-sm btn-square text-error",
                    title: "Delete link",
                    data: { turbo_confirm: "Are you sure you want to delete this link?" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 text-base-content/60">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto mb-4 opacity-50">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
      </svg>
      <p>No links yet. Add your first link to get started.</p>
    </div>
  <% end %>
</div>
