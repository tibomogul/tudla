<!-- Report Modal -->
<div 
  data-team-reports-target="modal"
  data-action="click->team-reports#closeOnBackdrop"
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-50 p-4"
>
  <div class="bg-base-100 rounded-lg shadow-xl max-w-3xl w-full max-h-[90vh] flex flex-col">
    <!-- Modal Header -->
    <div class="flex justify-between items-center p-6 border-b border-base-300">
      <h3 
        data-team-reports-target="modalTitle"
        class="text-xl font-bold"
      >
        Report Details
      </h3>
      <button 
        data-action="click->team-reports#closeModal"
        class="btn btn-ghost btn-sm btn-circle"
        aria-label="Close modal"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="p-6 overflow-y-auto flex-1" data-controller="theme-dark">
      <div 
        data-team-reports-target="modalContent"
        class="marksmith-rendered-body ms:prose ms:prose-neutral ms:dark:prose-invert"
      >
        <!-- Report content will be inserted here -->
      </div>
    </div>

    <!-- Modal Footer -->
    <div class="flex justify-end gap-2 p-6 border-t border-base-300">
      <button 
        data-action="click->team-reports#closeModal"
        class="btn btn-neutral"
      >
        Close
      </button>
    </div>
  </div>
</div>
