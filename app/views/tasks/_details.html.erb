<%= turbo_frame_tag dom_id(task) do %>
  <div id="<%= dom_id task %>" class="space-y-6">
    <!-- State Info Card -->
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body p-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="avatar avatar-placeholder">
              <div class="bg-primary text-primary-content rounded-full size-12">
                <span class="text-xl"><%= task.current_state.to_s[0].upcase %></span>
              </div>
            </div>
            <div>
              <h3 class="font-semibold text-lg">Current State</h3>
              <div class="flex items-center gap-2">
                <span class="badge badge-lg <%= badge_color(task.current_state) %>">
                  <%= task.current_state.humanize %>
                </span>
                <% if task.time_in_current_state %>
                  <span class="text-sm text-base-content/60">
                    for <%= distance_of_time_in_words(task.time_in_current_state) %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Description Card -->
    <% if task.description.present? %>
      <div class="card bg-base-100 shadow-sm">
        <div class="card-body p-4">
          <h3 class="font-semibold text-base mb-3 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
            </svg>
            Description
          </h3>
          <div data-controller="theme-dark">
            <div class="marksmith-rendered-body ms:prose ms:prose-neutral ms:dark:prose-invert">
              <%= render_markdown(task.description) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Details Card -->
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body p-4">
        <h3 class="font-semibold text-base mb-3 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
          </svg>
          Task Details
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% if task.project_id %>
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Project</p>
              <%= link_to task.project.name, task.project, class: "link link-primary", data: { turbo: false } %>
            </div>
          <% end %>

          <% if task.scope_id %>
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Scope</p>
              <%= link_to display_name_with_nice_to_have(task.scope), task.scope, class: "link link-primary", data: { turbo: false } %>
            </div>
          <% end %>

          <div>
            <p class="text-sm font-medium text-base-content/70 mb-1">Responsible User</p>
            <%= render "tasks/responsible_user_selector", task: task, can_update: policy(task).update?, show_label: false %>
          </div>

          <% if task.created_at %>
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Created</p>
              <p class="text-sm"><%= time_ago_in_words(task.created_at) %> ago</p>
            </div>
          <% end %>

          <% if task.updated_at && task.updated_at != task.created_at %>
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Last Updated</p>
              <p class="text-sm"><%= time_ago_in_words(task.updated_at) %> ago</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Estimates Card -->
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body p-4">
        <div class="flex items-center justify-between mb-3">
          <h3 class="font-semibold text-base flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Time Estimates
          </h3>
          <button 
            onclick="document.getElementById('estimates-display').classList.add('hidden'); document.getElementById('estimates-form').classList.remove('hidden'); document.querySelector('#estimates-form input').focus();"
            class="btn btn-ghost btn-xs"
            id="edit-estimates-btn"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
            </svg>
            Edit
          </button>
        </div>

        <!-- Display Mode -->
        <div id="estimates-display" class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <p class="text-sm font-medium text-base-content/70 mb-1">Unassisted Estimate</p>
            <p class="text-lg font-semibold">
              <%= task.unassisted_estimate.present? ? "#{task.unassisted_estimate} hrs" : "—" %>
            </p>
          </div>

          <div>
            <p class="text-sm font-medium text-base-content/70 mb-1">AI-Assisted Estimate</p>
            <p class="text-lg font-semibold text-primary">
              <%= task.ai_assisted_estimate.present? ? "#{task.ai_assisted_estimate} hrs" : "—" %>
            </p>
          </div>

          <div>
            <p class="text-sm font-medium text-base-content/70 mb-1">Actual Manhours</p>
            <p class="text-lg font-semibold">
              <%= task.actual_manhours.present? ? "#{task.actual_manhours} hrs" : "—" %>
            </p>
          </div>
        </div>

        <!-- Edit Mode (Hidden by default) -->
        <div id="estimates-form" class="hidden">
          <%= form_with model: task, url: task_path(task), method: :patch, data: { turbo_stream: true }, html: { class: "grid grid-cols-1 md:grid-cols-3 gap-4" } do |f| %>
            <%= f.hidden_field :update_context, value: "details" %>
            
            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Unassisted Estimate</p>
              <div class="join">
                <%= f.number_field :unassisted_estimate, min: 0, max: 9999, class: "input input-sm input-bordered join-item w-16", placeholder: "0" %>
                <span class="btn btn-sm btn-ghost join-item pointer-events-none">hrs</span>
              </div>
            </div>

            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">AI-Assisted Estimate</p>
              <div class="join">
                <%= f.number_field :ai_assisted_estimate, min: 0, max: 9999, class: "input input-sm input-bordered join-item w-16", placeholder: "0" %>
                <span class="btn btn-sm btn-ghost join-item pointer-events-none">hrs</span>
              </div>
            </div>

            <div>
              <p class="text-sm font-medium text-base-content/70 mb-1">Actual Manhours</p>
              <div class="join">
                <%= f.number_field :actual_manhours, min: 0, max: 9999, class: "input input-sm input-bordered join-item w-16", placeholder: "0" %>
                <span class="btn btn-sm btn-ghost join-item pointer-events-none">hrs</span>
              </div>
            </div>

            <div class="md:col-span-3 flex gap-2">
              <%= f.submit "Save", class: "btn btn-sm btn-primary" %>
              <button 
                type="button"
                onclick="document.getElementById('estimates-form').classList.add('hidden'); document.getElementById('estimates-display').classList.remove('hidden');"
                class="btn btn-sm btn-ghost"
              >
                Cancel
              </button>
            </div>
          <% end %>
        </div>

        <% if task.unassisted_estimate.present? && task.ai_assisted_estimate.present? %>
          <div class="mt-3 p-3 bg-base-200 rounded-lg">
            <p class="text-xs font-medium text-base-content/70 mb-2">Estimate Comparison</p>
            <div class="flex items-center gap-4">
              <div class="stat-value text-sm">
                <% efficiency = ((task.unassisted_estimate - task.ai_assisted_estimate).to_f / task.unassisted_estimate * 100).round(1) %>
                <%= efficiency > 0 ? "+#{efficiency}" : efficiency %>% efficiency with AI
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <script>
      // Reset to display mode after Turbo Stream update
      document.addEventListener('turbo:frame-load', function() {
        const display = document.getElementById('estimates-display');
        const form = document.getElementById('estimates-form');
        if (display && form) {
          display.classList.remove('hidden');
          form.classList.add('hidden');
        }
      });
    </script>

    <!-- State Transitions Card -->
    <% 
      # Get all possible transitions from current state (from state machine definition)
      current_state = task.current_state.to_sym
      possible_states = case current_state
        when :new then [:in_progress]
        when :in_progress then [:in_review, :blocked]
        when :in_review then [:done, :blocked]
        when :blocked then [:in_progress]
        when :done then [:in_review]
        else []
      end
    %>
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body p-4">
        <h3 class="font-semibold text-base mb-3 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
          </svg>
          State Transitions
        </h3>
        
        <% if possible_states.empty? %>
          <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm">No transitions available from the current state.</span>
          </div>
        <% else %>
          <% missing_requirements = [] %>
          <% if possible_states.include?(:in_progress) && !task.state_machine.can_transition_to?(:in_progress) %>
            <% missing_requirements << "responsible user" unless task.responsible_user.present? %>
            <% missing_requirements << "unassisted estimate" unless task.unassisted_estimate.present? %>
            <% missing_requirements << "AI-assisted estimate" unless task.ai_assisted_estimate.present? %>
          <% end %>
          
          <% if missing_requirements.any? %>
            <div class="alert alert-warning mb-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-5 w-5" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <span class="text-sm">
                To move to "In Progress", please add: <%= missing_requirements.join(', ') %>.
              </span>
            </div>
          <% end %>
          
          <div class="flex flex-wrap gap-2">
            <% possible_states.each do |state| %>
              <% can_transition = task.state_machine.can_transition_to?(state) %>
              <% tooltip_text = nil %>
              <% if !can_transition && state == :in_progress %>
                <% tooltip_text = "Missing: #{missing_requirements.join(', ')}" %>
              <% end %>
              
              <%= button_to update_state_task_path(task, state: state, update_context: "details"),
                method: :patch,
                data: { turbo_stream: true },
                disabled: !can_transition,
                class: "btn btn-sm #{button_color(state)} #{!can_transition ? 'btn-disabled opacity-50' : ''}",
                title: tooltip_text do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
                Move to <%= state.to_s.humanize %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>