<div id="<%= dom_id scope %>" class="space-y-6">
  <!-- Description Card -->
  <% if scope.description.present? %>
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body p-4">
        <h3 class="font-semibold text-base mb-3 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
          </svg>
          Description
        </h3>
        <div data-controller="theme-dark">
          <div class="marksmith-rendered-body ms:prose ms:prose-neutral ms:dark:prose-invert">
            <%= render_markdown(scope.description) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Details Card -->
  <div class="card bg-base-100 shadow-sm">
    <div class="card-body p-4">
      <h3 class="font-semibold text-base mb-3 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
        </svg>
        Scope Details
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <p class="text-sm font-medium text-base-content/70 mb-1">Project</p>
          <%= link_to scope.project.name, scope.project, class: "link link-primary" %>
        </div>

        <% if scope.created_at %>
          <div>
            <p class="text-sm font-medium text-base-content/70 mb-1">Created</p>
            <p class="text-sm"><%= time_ago_in_words(scope.created_at) %> ago</p>
          </div>
        <% end %>

        <% if scope.updated_at && scope.updated_at != scope.created_at %>
          <div>
            <p class="text-sm font-medium text-base-content/70 mb-1">Last Updated</p>
            <p class="text-sm"><%= time_ago_in_words(scope.updated_at) %> ago</p>
          </div>
        <% end %>

        <% task_count = scope.tasks.count %>
        <% if task_count > 0 %>
          <div>
            <p class="text-sm font-medium text-base-content/70 mb-1">Tasks</p>
            <p class="text-sm"><%= task_count %> <%= 'task'.pluralize(task_count) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Estimates Card -->
  <div class="card bg-base-100 shadow-sm">
    <div class="card-body p-4">
      <h3 class="font-semibold text-base mb-3 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Time Estimates
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <p class="text-sm font-medium text-base-content/70 mb-1">Unassisted Estimate</p>
          <p class="text-lg font-semibold">
            <%= scope.cached_unassisted_estimate > 0 ? "#{scope.cached_unassisted_estimate} hrs" : "—" %>
          </p>
        </div>

        <div>
          <p class="text-sm font-medium text-base-content/70 mb-1">AI-Assisted Estimate</p>
          <p class="text-lg font-semibold text-primary">
            <%= scope.cached_ai_assisted_estimate > 0 ? "#{scope.cached_ai_assisted_estimate} hrs" : "—" %>
          </p>
        </div>

        <div>
          <p class="text-sm font-medium text-base-content/70 mb-1">Actual Manhours</p>
          <p class="text-lg font-semibold">
            <%= scope.cached_actual_manhours > 0 ? "#{scope.cached_actual_manhours} hrs" : "—" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
