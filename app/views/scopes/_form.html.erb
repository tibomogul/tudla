<%= form_with(model: scope, class: "contents", data: { turbo: false, controller: "theme-dark" }) do |form| %>
  <% if scope.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(scope.errors.count, "error") %> prohibited this scope from being saved:</h2>

      <ul class="list-disc ml-6">
        <% scope.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scope.errors[:name].none?, "border-red-400 focus:outline-red-600": scope.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.marksmith :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scope.errors[:description].none?, "border-red-400 focus:outline-red-600": scope.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :project_id %>
    <%= form.text_field :project_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scope.errors[:project_id].none?, "border-red-400 focus:outline-red-600": scope.errors[:project_id].any?}] %>
  </div>

  <div class="my-5">
    <label class="flex items-center gap-2 cursor-pointer">
      <%= form.check_box :nice_to_have, class: "checkbox" %>
      <span>Nice to have</span>
    </label>
  </div>

  <div class="inline">
    <%= form.submit class: "btn btn-soft btn-primary" %>
  </div>
<% end %>
