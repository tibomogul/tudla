<% content_for :title, "Organizations" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Organizations</h1>
    <%= link_to "New organization", new_organization_path, class: "btn btn-soft btn-primary" if policy(Organization).new? %>
  </div>

  <div id="organizations" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @organizations.any? %>
      <% @organizations.each do |organization| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render organization %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", organization, class: "btn btn-soft" if policy(organization).show? %>
            <%= link_to "Edit", edit_organization_path(organization), class: "btn btn-soft" if policy(organization).edit? %>
            <%= button_to "Destroy", organization, method: :delete, class: "btn btn-soft btn-secondary", data: { turbo_confirm: "Are you sure?" } if policy(organization).destroy? %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No organizations found.</p>
    <% end %>
  </div>
</div>
