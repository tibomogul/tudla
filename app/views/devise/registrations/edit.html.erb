<% content_for :title, "Change Password" %>

<div class="max-w-2xl w-full">
  <!-- Header with breadcrumbs -->
  <div class="flex items-center justify-between mb-6">
    <h1 class="font-bold text-3xl">Change Password</h1>
    <div class="breadcrumbs hidden p-0 text-sm sm:inline">
      <ul>
        <li><%= link_to "Dashboard", user_root_path %></li>
        <li><%= link_to "My Profile", profile_path %></li>
        <li class="opacity-80">Change Password</li>
      </ul>
    </div>
  </div>

  <!-- Password Change Card -->
  <div class="card bg-base-100 shadow-md">
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-control mb-4">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "input input-bordered w-full",
                disabled: true %>
          <label class="label">
            <span class="label-text-alt text-base-content/60">Email cannot be changed</span>
          </label>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-info mb-4">
            <span class="iconify lucide--info size-4"></span>
            <span>Currently waiting confirmation for: <%= resource.unconfirmed_email %></span>
          </div>
        <% end %>

        <div class="divider">Change Password</div>

        <div class="form-control mb-4">
          <%= f.label :current_password, class: "label" do %>
            <span class="label-text">Current Password</span>
          <% end %>
          <%= f.password_field :current_password, 
                autocomplete: "current-password",
                placeholder: "Enter your current password",
                class: "input input-bordered w-full" %>
          <label class="label">
            <span class="label-text-alt text-base-content/60">We need your current password to confirm changes</span>
          </label>
        </div>

        <div class="form-control mb-4">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">New Password</span>
          <% end %>
          <%= f.password_field :password, 
                autocomplete: "new-password",
                placeholder: "Enter new password (leave blank if you don't want to change it)",
                class: "input input-bordered w-full" %>
          <label class="label">
            <% if @minimum_password_length %>
              <span class="label-text-alt text-base-content/60"><%= @minimum_password_length %> characters minimum</span>
            <% end %>
          </label>
        </div>

        <div class="form-control mb-6">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Confirm New Password</span>
          <% end %>
          <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                placeholder: "Confirm your new password",
                class: "input input-bordered w-full" %>
        </div>

        <div class="card-actions justify-end">
          <%= link_to "Cancel", profile_path, class: "btn btn-soft" %>
          <%= f.submit "Update Password", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Danger Zone Card -->
  <div class="card bg-base-100 shadow-md border-2 border-error/20 mt-6">
    <div class="card-body">
      <h2 class="card-title text-error">
        <span class="iconify lucide--alert-triangle size-5"></span>
        Danger Zone
      </h2>
      <p class="text-base-content/60 mb-4">
        Once you delete your account, there is no going back. Please be certain.
      </p>
      <%= button_to "Delete my account", 
            registration_path(resource_name), 
            method: :delete,
            class: "btn btn-error",
            data: { 
              confirm: "Are you sure? This action cannot be undone!", 
              turbo_confirm: "Are you sure? This action cannot be undone!" 
            } %>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex gap-2 mt-6">
    <%= link_to "Back to Profile", profile_path, class: "btn btn-soft" %>
  </div>
</div>
