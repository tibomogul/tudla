<div class="card bg-base-100 shadow">
  <div class="card-body">
    <h3 class="card-title text-lg mb-4">My Projects</h3>
    <% if @projects.any? %>
      <div class="space-y-2">
        <% @projects.each do |project| %>
          <div class="flex items-center justify-between p-3 rounded-lg hover:bg-base-200 transition-colors">
            <div class="flex-1">
              <%= link_to project_path(project), class: "font-medium hover:underline" do %>
                <%= project.name %>
              <% end %>
              <% if project.team %>
                <span class="text-sm text-gray-500 ml-2">
                  <%= project.team.name %>
                </span>
              <% end %>
            </div>
            <div class="flex items-center gap-2">
              <span class="badge badge-outline <%= risk_badge_color(project.risk_current_state) %>">
                <%= project.risk_current_state.to_s.humanize %>
              </span>
              <span class="text-sm text-gray-500">
                <%= project.tasks.count %> tasks
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-4">No projects available</p>
    <% end %>
    <div class="card-actions justify-end mt-4">
      <%= link_to "View All Projects", projects_path, class: "btn btn-sm btn-ghost" if policy(Project).index? %>
    </div>
  </div>
</div>
