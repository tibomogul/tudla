#!/usr/bin/env ruby

require 'fileutils'
require 'optparse'

# path to your application root.
APP_ROOT = File.expand_path('..', __dir__)

def setup
  FileUtils.chdir APP_ROOT do
    # This script is a way to set up or update your development environment automatically.
    # This script is idempotent, so that you can run it at any time and get an expectable outcome.
    # Add necessary setup steps to this file.

    log '== Installing dependencies =='
    # system! "gem install bundler --conservative"
    system! 'bundle check || bundle install'

    log '== Dropping & recreating the development database =='
    # Note that the very first time this runs, db:reset
    # will fail, but this failure is fixed by
    # doing a db:migrate
    # system("bin/rails db:drop") || system!("bin/rails db:prepare")
    system! 'bin/rails db:reset || bin/rails db:migrate'

    log '== Loading schemas for multi-database connections (queue, cable) =='
    # Load schemas if they exist, but don't fail if they don't
    system('bin/rails db:schema:load:queue') || log('No queue schema yet (will be created by Solid Queue)')
    system('bin/rails db:schema:load:cable') || log('No cable schema yet (will be created by Solid Cable)')

    log 'Dropping & recreating the test database'
    # Setting the RAILS_ENV explicitly to be sure
    # we actually reset the test database
    system!({ 'RAILS_ENV' => 'test' }, 'bin/rails db:reset')

    log '== Removing old logs and tempfiles =='
    system! 'bin/rails log:clear tmp:clear'

    log '== Removing attachments =='
    system! 'bin/rake active_storage:remove_all'
  end

  log 'All set up.'
  log ''
  log 'To see commonly-needed commands, run:'
  log ''
  log '    bin/setup help'
  log ''
end

def help
  puts "Usage: #{$0}"
  puts ''
  puts 'Installs gems, recreates dev database, and generally'
  puts 'prepares the app to be run locally'
  puts ''
  puts 'Other useful commands:'
  puts ''
  puts ' bin/dev'
  puts '    # run app locally'
  puts ''
  puts ' bin/ci'
  puts '    # runs all tests and checks as CI would'
  puts ''
  puts ' bin/rails test'
  puts '    # run non-system tests'
  puts ''
  puts ' bin/rails test:system'
  puts '    # run system tests'
  puts ''
  puts ' bin/setup help'
  puts '    # show this help'
  puts ''
end

# start of helpers

# It's helpful to know what messages came from this
# script, so we'll use log instead of `puts`
def log(message)
  puts "[ bin/setup ] #{message}"
end

# We don't want the setup method to have to do all this error
# checking, and we also want to explicitly log what we are
# executing. Thus, we use this method instead of Kernel#system
def system!(*args)
  log "Executing #{args}"
  if system(*args)
    log "#{args} succeeded"
  else
    log "#{args} failed"
    abort
  end
end

# end of helpers

OptionParser.new do |parser|
  parser.on('-h', '--help') do
    help
    exit
  end
end.parse!

if ARGV[0] == 'help'
  help
elsif !ARGV[0].nil?
  puts "Unknown argument: '#{ARGV[0]}'"
  exit 1
else
  setup
end
